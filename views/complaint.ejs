<!-- views/complaint.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Complaints</title>
    <link rel="stylesheet" href="/stylesheets/output.css">
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet"/>
    <style>
        body { font-family: Arial, sans-serif; margin: 50px; }
        table {
             width: 100%;
             border-collapse: collapse; 
            }

        th, td{ 
            padding: 10px;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; 
            text-align: left; 
            font-size: 14px;
            }
            tr{
                gap: 5px;
                border: 5px solid white;
                border-spacing:5px ;    
            }

         td{
            background-color: rgb(202, 202, 202);
            /* row-gap: 10px solid;; */
         }   
        th { 
            background-color: #f4f4f4; 
        }

    </style>
</head>
<body>
    <div class="flex justify-between mb-2">
        <select name="select" id="option">
            <option value="All Complaints">All complaints</option>
            <option value="Pending Complaints">Pending Complaints</option>
            <option value="Checked Complaints"> Checked Complaints</option>
        </select>
        <span>Total Complaints <%= totalCount %></span>
        <input type="text" placeholder="search complaint by id" class="border-zinc-400 rounded px-1">
    </div>
    <table>
        <tr>
            <th>Complaint ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Complaint</th>
            <th>Date</th>
            <th> Status</th>
        </tr>
        <% complaints.forEach(function(complaint) { %>
            <tr>
                <td style="border-radius: 13px 0px 0px 13px;"><%= complaint.ID %></td>
                <td><%= complaint.username %></td>
                <td><%= complaint.email %></td>
                <td><%= complaint.complaint %></td>
                <td><%= complaint.created_at %></td>
                <td style="border-radius: 0px 13px 13px 0px;"><i class="ri-focus-2-fill" style="color: red; text-shadow: 0 0 10px red, 0 0 10px red, 0 0 12px red; margin-right: 10px;"></i>Pending</td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
